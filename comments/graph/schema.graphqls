extend type Query {
    comment(id: ID!): Comment!
    comments: [Comment!]!
}

type Comment @key(fields: "id") {
    id: ID!
    postId: ID!
    name: String!
    email: String!
    body: String!
    created: DateTime!
}

extend type Post @key(fields: "id") {
    id: ID! @external
    comments: [Comment!]!
}

scalar DateTime